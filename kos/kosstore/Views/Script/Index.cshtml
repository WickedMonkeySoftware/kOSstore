@model IEnumerable<kosstore.Models.Script>

@{
    ViewBag.Title = "kOS Script Directory";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            <a>@Html.DisplayName("Script Name")</a>
        </th>
        <th>
            @Html.DisplayName("Created by")
        </th>
        <th class="desc">
            <a>@Html.DisplayName("Submitted")</a>
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScriptName)
            </td>
            <td>
                @Html.DisplayFor(m => item.UserProfile.UserName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Submitted)
            </td>
            <td>
                @Html.DisplayFor(m => item.ScriptCategory.CategoryName)
            </td>
            <td>
                @if ((int)WebSecurity.CurrentUserId == item.UserId)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) @Html.Encode(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) @Html.Encode(" | ")
                }
            @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
